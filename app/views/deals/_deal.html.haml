.card.mb-1.h-100.deal-card.shadow-sm
  .image-container.mh-100.text-center
    -if deal.image.representable?
      =link_to deal_path(deal) do
        =resource_image(deal.image, class: ' deal-image ', alt: deal.title)
  
  .card-body
    %h5.card-title
      =link_to deal_path(deal) do
        =display_text(deal.title)
    %h6.card-subtitle
      =link_to store_path(deal.store) do
        =resource_image(deal.store.image, class: 'img-fluid store-image', alt: deal.store_name)
    %p
      .card-text.deal-price
        =display_money(deal.price) if deal.price?
      -if deal.retail_price.present?
        .original-price
          =display_money(deal.retail_price)
    .deal-discount
    -if deal.affiliate_url.present?
      =link_to 'Buy Now', deal.affiliate_url, class: 'btn btn-success', target: '_blank'
