.card.mb-4.h-100
  -if deal.image.representable?
    =link_to deal_path(deal) do
      .text-center
        =resource_image(deal.image, class: ' deal-image ', alt: deal.title)
  
  .card-body
    %h5.card-title
      =display_text(deal.title)
    %h6.card-subtitle
      =link_to store_path(deal.store) do
        =resource_image(deal.store.image, class: 'img-fluid', alt: deal.store_name)
    -# %p.card-text= deal.body
    %p
      .card-text.deal-price
        =display_money(deal.price)
      -if deal.retail_price.present?
        .original-price
          =display_money(deal.retail_price)
    .deal-discount
    -if deal.url?
      =link_to 'Buy Now', deal.url, class: 'btn btn-success', target: '_blank'
